{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "esnext",
		"outDir": "dist",
		"target": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"paths": {
			"@sugarat/theme/node": ["./node"],
			"@sugarat/theme": ["src/index.ts"]
		}
	},
	"include": [
		"src",
		"types",
		"docs/.vitepress/*.ts",
		"docs/.vitepress/config.mts"
	],
	"exclude": ["node_modules", "dist", "node.d.ts"]
}
